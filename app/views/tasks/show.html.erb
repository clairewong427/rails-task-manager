<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<% if @task.completed == true %>
  <input type="checkbox" name=completed checked>
  <p>This task is completed</p>
<% else %>
  <input type="checkbox" name=completed>
  <p>This task is not completed yet</p>
<% end %>

<%= link_to "Back to list",  index_path%>
<%= link_to "Edit task", edit_path(@task) %>
<%= link_to "Delete task", delete_path(@task), method: :delete %>
