<form action="/tasks/<%= @task.id %>" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" name="_method" value="patch">
  <label for="title">Task title:</label>
  <input type="text" name="task[title]" id="title" value="<%= @task.title %>">
  <label for="details">Task details:</label>
  <input type="text" name="task[details]" id="details" value="<%= @task.details %>">
  <% if @task.completed == true %>
    <input type="checkbox" name="task[completed]" id="completed" checked>
  <% else %>
    <input type="checkbox" name="task[completed]" id="completed">
  <% end %>
  <label for="completed">Completed</label>
  <input type="submit" value="Update task">
</form>

<%= link_to "Back to list", index_path %>
